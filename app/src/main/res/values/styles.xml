<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text Styles -->
    <style name="TextAppearance.EventManagement.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/colorOnBackground</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="TextAppearance.EventManagement.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/colorOnBackground</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.EventManagement.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="TextAppearance.EventManagement.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:textSize">12sp</item>
        <item name="android:alpha">0.7</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.EventManagement.Button.Primary" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:padding">16dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Widget.EventManagement.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:padding">16dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Card Style -->
    <style name="Widget.EventManagement.Card" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/colorSurface</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <!-- TextInputLayout Style -->
    <style name="Widget.EventManagement.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
    </style>

    <!-- AppBar Style -->
    <style name="Widget.EventManagement.TopAppBar" parent="Widget.Material3.Toolbar.Surface">
        <item name="titleTextColor">@color/colorOnPrimary</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="elevation">0dp</item>
        <item name="titleTextAppearance">@style/TextAppearance.EventManagement.Headline2</item>
    </style>
</resources>
